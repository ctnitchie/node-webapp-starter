{
  "name": "express-react-starter",
  "version": "1.0.0",
  "description": "A simple starter project utilising React, Express, Socket.io, Babel, and Bootstrap.",
  "main": "dist/app.js",
  "scripts": {
    "start": "nodemon server/server.js --exec babel-node & webpack --progress --colors --watch & autoless www/stylesheets",
    "prepublish": "babel server -d dist; webpack --progress --colors; lessc --source-map --verbose www/stylesheets/style.less www/stylesheets/style.css; copyfiles -u 2 server/views/* dist/views",
    "serve": "node dist/server.js",
    "test": "mocha --compilers js:babel-register",
    "clean": "rimraf dist & rimraf www/stylesheets/*.css* & rimraf www/scripts/*"
  },
  "author": "Chris Nitchie <cnitchie@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ctnitchie/node-webapp-starter"
  },
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "body-parser": "~1.15.2",
    "bootstrap": "^3.3.7",
    "cookie-parser": "~1.4.3",
    "debug": "~2.2.0",
    "es6-promise": "^4.0.5",
    "express": "~4.14.0",
    "hbs": "~4.0.1",
    "isomorphic-fetch": "^2.2.1",
    "jquery": "^3.1.1",
    "lwrpc": "^0.9.7",
    "method-override": "^2.3.7",
    "morgan": "~1.7.0",
    "react": "^15.4.1",
    "react-autobind": "^1.0.6",
    "react-dom": "^15.4.1",
    "serve-favicon": "~2.3.0",
    "socket.io": "^1.7.1"
  },
  "devDependencies": {
    "autoless": "^0.1.7",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2017": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-preset-stage-3": "^6.17.0",
    "chai": "^3.5.0",
    "copyfiles": "^1.0.0",
    "eslint": "^3.10.2",
    "eslint-plugin-react": "^6.7.1",
    "imports-loader": "^0.6.5",
    "less": "^2.7.1",
    "mocha": "^3.1.2",
    "nodemon": "^1.11.0",
    "rimraf": "^2.5.4",
    "webpack": "^1.13.3"
  }
}
